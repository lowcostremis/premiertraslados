const admin = require('firebase-admin'); // Importar las librerías necesarias
const algoliasearch = require('algoliasearch');

// --- CONFIGURACIÓN ---
// Clave de Firebase (la que acabas de descargar)
const serviceAccount = require('./firebase-service-account.json');

// Claves de Algolia (las mismas que usas en tus functions)
const ALGOLIA_APP_ID = "G0MTC1VJ54";
const ALGOLIA_ADMIN_KEY = "980aa5608e1d597cbae8f94c96ed0487";

// --- INICIALIZACIÓN ---
// Conectar a Firebase
admin.initializeApp({
  credential: admin.credential.cert(serviceAccount)
});
const db = admin.firestore();

// Conectar a Algolia
const algoliaClient = algoliasearch(ALGOLIA_APP_ID, ALGOLIA_ADMIN_KEY);

// --- FUNCIÓN PRINCIPAL ---
async function sincronizarColeccion(nombreColeccion, nombreIndice) {
    const indice = algoliaClient.initIndex(nombreIndice);
    console.log(`Iniciando sincronización para la colección: ${nombreColeccion}...`);

    // Obtener todos los documentos de la colección de Firestore
    const snapshot = await db.collection(nombreColeccion).get();

    if (snapshot.empty) {
        console.log(`No se encontraron documentos en ${nombreColeccion}.`);
        return;
    }

    // Preparar los datos para Algolia
    const records = snapshot.docs.map(doc => {
        const data = doc.data();
        return {
            objectID: doc.id, // Muy importante: usar el ID de Firestore
            ...data
        };
    });

    // Enviar los datos a Algolia en un solo lote
    await indice.saveObjects(records);

    console.log(`✅ ¡Sincronización completa! Se enviaron ${records.length} registros de ${nombreColeccion} al índice ${nombreIndice}.`);
}

// --- EJECUCIÓN ---
async function main() {
    try {
        // Llama a la función para cada colección que quieras sincronizar
        await sincronizarColeccion('pasajeros', 'pasajeros');
        await sincronizarColeccion('historico', 'historico');
        await sincronizarColeccion('reservas', 'reservas');
        console.log('\nTodas las colecciones han sido sincronizadas.');
    } catch (error) {
        console.error('Ocurrió un error durante la sincronización:', error);
    }
}

// Ejecutar la función principal
main();